@model HomeDetailViewModel;
@{ var avatarPath = $"/images/{ (Model.book.AvatarPath ?? "nonavatar.png")}";

}
<from>
    <div class=" row">
        <div class="col-sm-4">
            <div>
                <img src="@avatarPath" width=" 300" , height=" 500">
            </div>
        </div>

        <div class=" col-8 table">

            <table class=" table-primary">
                <tr>
                    <th width=" 150">
                        <h6> Tên sách: </h6>

                    </th>
                    <th>
                        <h6> @Model.book.Name</h6>

                    </th>
                </tr>
                <tr>
                    <th>
                        <h6>Tác giả: </h6>

                    </th>
                    <th>
                        <h6> @Model.book.Author</h6>

                    </th>
                </tr>
                <tr>
                    <th>
                        <h6> Giá bìa: </h6>

                    </th>
                    <th>
                        <h6> @Model.book.Price.ToString("#,##0 VNĐ")</h6>

                    </th>
                </tr>
                <tr>
                    <th>
                        <h6>Thể loại:</h6>

                    </th>
                    <th>
                        <h6> @Model.book.GenreName</h6>

                    </th>
                </tr>
                <tr>
                    <th>
                        <h6>Giới thiệu: </h6>

                    </th>
                    <th>
                        <h6> @Model.book.Depscrip</h6>

                    </th>
                </tr>

            </table>


            <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.book.Id" class="btn btn-danger">Delete</a>
            <a asp-controller="Book" asp-action="BookManagement" asp-route-id="@Model.book.Id" class="btn btn-danger">Back</a>

        </div>
     </div>

</from>
