@model VitaBookStrore.ViewModels.HomeIndexViewModel;
@{
    ViewData["Title"] = "";
}


<!-- Jumbotron Header -->
    <form>
        <div>
            <div >
                <img src="~/images/1252.jpg" />

                <h1 class="display-3">Vita Book Welcome!</h1>
                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
            </div>
        </div>

    </form>



<div class="row mt-3" style=" height:400px">
    
        @{
            foreach (var book in Model.Books)
            {
                var avatarPath = $"/images/{ (book.AvatarPath ?? "nonavatar.png")}";
            <div class="col-sm-3">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@book.Id">

                    <img class=" card-img-top " src="@avatarPath" alt="Card image" style="width:200; height:250px">
                    <div class="card-body">
                        <h4 class="card-title form-row">@book.Name</h4>
                        <h4 class="card-title">@book.Price.ToString("#,##0 VNĐ")</h4>
                        <h6 class="card-text">@book.Author</h6>
                    </div>
                </a>
            </div>
            }
          }
                
            
          

</div>
