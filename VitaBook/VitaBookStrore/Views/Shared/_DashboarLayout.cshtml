<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/Management/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Management/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>
    <!-- Page Wrapper -->
    <div class="form-row">

        <div class="col-sm-2">
            <!-- Sidebar -->
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
                <li>
                    <!-- Sidebar - Brand -->
                    <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Management">
                        <div class="sidebar-brand-icon rotate-n-15">
                            <i class="fas fa-laugh-wink"></i>
                        </div>
                        <div class="sidebar-brand-text mx-3"> Admin </div>
                    </a>
                    <hr class="sidebar-divider my-0">

                </li>

                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Management">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>

                </li>

                <li>
                    <hr class="sidebar-divider">
                    <div class="sidebar-heading">
                        PRODUCT
                    </div>

                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Book" asp-action="BookManagement">
                        <i class="fas fa-fw fa-cog"></i>
                        <span>Book</span>
                    </a>

                </li>


                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-fw fa-wrench"></i>
                        <span>Category</span>
                    </a>

                </li>

                <li>
                    <hr class="sidebar-divider" />
                    <div class="sidebar-heading">
                        ACCOUNT
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Role" asp-action="Index">
                        <i class="fas fa-fw fa-folder"></i>
                        <span>Role</span>
                    </a>

                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="User" asp-action="Index">
                        <i class="fas fa-fw fa-folder"></i>
                        <span>User</span>
                    </a>

                </li>
            </ul>
        </div>
        <div class="col-sm-10">
            @RenderBody()
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Management/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Management/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Management/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Management/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Management/js/demo/chart-area-demo.js"></script>
    <script src="~/Management/js/demo/chart-pie-demo.js"></script>
    @RenderSection("Script", required: false)

</body>
</html>
