@model IEnumerable<Genre>
@{
    ViewBag.Title = "Category Management";
}
<h3 class="text-center">CATEGORY MANAGEMENT</h3>

<div class="container">
    <a asp-controller="Category" asp-action="Create" class="btn btn-success mr-auto">Create</a>

    <table class="table table-bordered table-hover mt-2">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th> Thể loại</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var genre in Model)
                {
                    <tr>
                        <td>@genre.GenreId</td>
                        <td>@genre.GenreName</td>
                        <td class="text-center">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-warning">Edit</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>