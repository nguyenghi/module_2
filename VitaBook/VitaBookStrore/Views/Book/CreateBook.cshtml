@model VitaBookStrore.ViewModels.BookCreateViewModel;
@{
    //@*style="width:1200px"*@
    ViewBag.TiTle = "Create Book";
    var genres = ViewBag.Genre as List<Genre>;
}
        <form enctype="multipart/form-data" asp-controller="Book" asp-action="CreateBook" method="post" class="mt-3" >
            <div class="container"> 
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text alert-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="from form-control" />
                        <span asp-validation-for="Price" class="text alert-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="Author"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Author" class="from form-control" />
                        <span asp-validation-for="Author" class="text alert-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="GenreId"></label>
                    </div>
                    <div class="col-sm-10">
                        <select asp-for="GenreId" class="custom-select">

                            <option>Select a Genre</option>
                            @if (genres != null)
                            {
                                foreach (var genre in genres)
                                {
                                    <option value="@genre.GenreId">@genre.GenreName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="AvatarPath"></label>
                    </div>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input class="custom-file-input" asp-for="AvatarPath">
                            <label class="custom-file-label" for="custom-file" asp-for="AvatarPath">Choose file</label>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="Depscrip"></label>
                    </div>
                    <div class="col-sm-10">
                        <textarea asp-for="Depscrip" class="from form-control text h-100" ></textarea>
                        <span asp-validation-for="Depscrip" class="text alert-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="Remain"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Remain" class="from form-control" />
                        <span asp-validation-for="Remain" class="text alert-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary"> Create</button>
                        <a asp-controller="Book" asp-action="BookManagement" class="btn btn-warning"> Back</a>
                    </div>
                </div>
            </div>

        </form>
@section Script{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });
    </script>

}