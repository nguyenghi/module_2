@model HomeIndexViewModel
@{
    ViewData["Title"] = "";
}


<!-- Jumbotron Header -->

<div class="img-fluid">
    <div class="text-center">
        <img src="~/images/1252.jpg" />
        <h1 class="display-3">Vita Book Welcome!</h1>
        <p class="lead">Gặp được một quyển sách hay nên mua liền dù đọc được hay không đọc được, vì sớm muộn gì cũng cần đến nó!</p>
    </div>
</div>
<ul class="nav container text-center">
    <li class="nav-item text-center ">
        <div class="col">
            <a class="" asp-controller="Home" asp-action="BookCategory" asp-route-id="1">
                <img src="~/images/smal-img/ico_tamly@3x.png" /><br />
                Sách Kỹ Năng
            </a>
        </div>
    </li>
    <li class="nav-item text-center">
        <div class="col">
            <a class="" asp-controller="Home" asp-action="BookCategory" asp-route-id="2">
                <img src="~/images/smal-img/ico_thieunhi@3x.png" /><br />
                Sách Thiếu nhi
            </a>
        </div>
    </li>
    <li class="nav-item text-center">
        <div class="col">
            <a class="" asp-controller="Home" asp-action="BookCategory" asp-route-id="3">
                <img src="~/images/smal-img/ico_kinhte@3x.png" /><br />
                Sách Kinh tế
            </a>
        </div>
    </li>
    
</ul>


<div class="row mt-3 container-fluid">
    <div class="col container">
        <div class="row my-2">
            @foreach (var book in Model.Books)
            {
                var avatarPath = $"/images/{ (book.AvatarPath ?? "nonavatar.png")}";
                <div class="col-2 my-2 container-fluid">
                    <div class="card h-100 box-shadow"  >
                        <div class="text-center">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@book.Id">
                                <img class="card-img rounded" src="@avatarPath"  style="width:200px; height:250px">
                            </a>

                        </div>
                        <div class="text-md-left my-1">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@book.Id">
                                <h6>@book.Name</h6>
                                <br />
                                <h5 class="text-center "style=" color:red">@book.Price.ToString("#,##0 VNĐ")</h5>
                                <h6 class="card-text">@book.Author</h6>
                            </a>

                        </div>
                        
                    </div>
                </div>
            }
        </div>
    </div>
</div>